<LinearLayout
        android:id="@+id/pick_delivery_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:weightSum="5"
        android:background="@android:color/transparent"
        android:paddingTop="15dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <TextView
            android:text="@string/label_day"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:text="@string/label_hour"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:text="@string/label_minutes"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/pale_grey_six"
            android:layout_gravity="center"/>

        <LinearLayout
            android:weightSum="5"
            android:background="@android:color/transparent"
            android:paddingTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <com.omarAndsattar.timepickerdialog.widget.CircleRecyclerView
                    android:layout_weight="2"
                    android:id="@+id/rv_date_recycler"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                   />

            <com.omarAndsattar.timepickerdialog.widget.CircleRecyclerView
                    android:id="@+id/rv_hours_recycler"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    />

            <com.omarAndsattar.timepickerdialog.widget.CircleRecyclerView
                android:id="@+id/rv_minutes_recycler"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                />

            <com.omarAndsattar.timepickerdialog.widget.CircleRecyclerView
                android:id="@+id/rv_am_pm_recycler"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                />

        </LinearLayout>

    </FrameLayout>

    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:textAllCaps="false"
        android:text="@string/label_done"
        android:onClick="done"
        android:textColor="#fff"
        android:textSize="14sp" />


</LinearLayout>
